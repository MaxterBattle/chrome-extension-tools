{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "client/*": ["src/client/*"],
      "src/*": ["src/node/*"],
      "tests/*": ["tests/*"],
      "rxjs": [ "node_modules/rxjs"],
      "rxjs/*": [ "node_modules/rxjs/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "tests/templates", "dist"]
}
